@using MvcApplication2.Models
@model  Patient

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2>Patient form</h2>
        <form role="form" method="post" action="/Patient/Edit">
            <div class="form-group">
                <label>Patient Name:</label>
                <input type="text" class="form-control" name="name" placeholder="name" value="@Model.Name ">
            </div>
            <div class="form-group">
                <label>Age:</label>
                <input type="text" class="form-control" name="age" placeholder="age" value="@Model.Age">
            </div>
            <div class="form-group">
                <label>Insurance:</label>
                <input type="text" class="form-control" name="insurance" placeholder="insurance" value="@Model.Insurance">
            </div>
            <input type="hidden" name="id" value="@Model.Id"/>
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
</html>
